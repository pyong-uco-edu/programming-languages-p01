#----------------------------------------------------------------------
# File makemcr creates the micro scanner mcr
#----------------------------------------------------------------------
#----------------------------------------------------------------------
# Object files
#----------------------------------------------------------------------
obj = p01.o \
	p01lex.o
#----------------------------------------------------------------------
# Bind the micro scanner using the linkage editor
#----------------------------------------------------------------------
p01: ${obj}
	g++ -o p01 ${obj} -lm -ll
#----------------------------------------------------------------------
# File p01.cpp processes command line arguments
#----------------------------------------------------------------------
p01.o: p01.cpp p01lex.h
	g++ -c -g p01.cpp
#----------------------------------------------------------------------
# File p01lex.cpp is the lex-generated scanner
#----------------------------------------------------------------------
p01lex.cpp: p01lex.l p01lex.h
	lex p01lex.l
	mv lex.yy.c p01lex.cpp
#----------------------------------------------------------------------
#----------------------------------------------------------------------
clean:
	rm p01lex.cpp
	rm *.o
	rm p01